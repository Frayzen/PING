{
    "compilerOptions": {
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "target": "es6",
        "module": "esnext",
        "jsx": "react",
        "checkJs": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "resolve": {
            "extensions": [
                ".js",
                ".jsx",
                ".ts",
                ".tsx"
            ]
        }
    },
    "baseUrl": "./src/",
    "paths": {
        "@/*": [
            "src/*"
        ]
    },
    "include": [
        "src/**/*.js",
        "src/**/*.jsx",
        "src/**/*.ts",
        "src/**/*.tsx"
    ]
}
